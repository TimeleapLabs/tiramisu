{
  "scopeName": "source.tiramisu",
  "name": "Tiramisu",
  "patterns": [
    {
      "include": "#atom"
    }
  ],
  "repository": {
    "atom": {
      "patterns": [
        {
          "include": "#escape"
        },
        {
          "include": "#code-blocks"
        },
        {
          "include": "#bold"
        },
        {
          "include": "#italic"
        },
        {
          "include": "#functions"
        },
        {
          "include": "#link"
        },
        {
          "include": "#string"
        }
      ]
    },
    "link": {
      "match": "(https?|ftp)://[^ \\]\\[]+",
      "name": "markup.underline.link"
    },
    "string": {
      "begin": "(\"{1,})",
      "end": "\\1",
      "name": "string.quoted.double.tiramisu",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.tiramisu"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "begin": "(\\w+)\\s*\\{",
          "end": "\\}",
          "captures": {
            "1": {
              "name": "entity.name.function.tiramisu"
            }
          },
          "patterns": [
            {
              "include": "#atom"
            },
            {
              "include": "#parameters"
            }
          ]
        }
      ]
    },
    "parameters": {
      "match": "(\\w+)\\s*=\\s*",
      "captures": {
        "1": {
          "name": "variable.parameter.language.tiramisu"
        }
      }
    },
    "code-blocks": {
      "begin": "(code)\\s*\\{",
      "end": "\\}",
      "captures": {
        "1": {
          "name": "entity.name.function.tiramisu"
        }
      },
      "patterns": [
        {
          "include": "#highlight-js"
        },
        {
          "include": "#highlight-python"
        },
        {
          "include": "#highlight-solidity"
        },
        {
          "include": "#parameters"
        }
      ]
    },
    "highlight-js": {
      "begin": "(language)\\s*=\\s*(javascript|js)",
      "end": "\\}",
      "captures": {
        "1": {
          "name": "variable.parameter.language.tiramisu"
        }
      },
      "patterns": [
        {
          "begin": "(\"{1,})",
          "end": "\\1",
          "patterns": [
            {
              "include": "source.js"
            }
          ],
          "name": "markup.inserted.tiramisu"
        }
      ]
    },
    "highlight-python": {
      "begin": "(language)\\s*=\\s*(python|py)",
      "end": "\\}",
      "captures": {
        "1": {
          "name": "variable.parameter.language.tiramisu"
        }
      },
      "patterns": [
        {
          "begin": "(\"{1,})",
          "end": "\\1",
          "patterns": [
            {
              "include": "source.js"
            }
          ],
          "name": "markup.inserted.tiramisu"
        }
      ]
    },
    "highlight-solidity": {
      "begin": "(language)\\s*=\\s*(solidity|sol)",
      "end": "\\}",
      "captures": {
        "1": {
          "name": "variable.parameter.language.tiramisu"
        }
      },
      "patterns": [
        {
          "begin": "(\"{1,})",
          "end": "\\1",
          "patterns": [
            {
              "include": "source.js"
            }
          ],
          "name": "markup.inserted.tiramisu"
        }
      ]
    },
    "bold": {
      "begin": "(bold)\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tiramisu"
        }
      },
      "name": "markup.bold.tiramisu",
      "patterns": [
        {
          "include": "#atom"
        },
        {
          "include": "#parameters"
        }
      ]
    },
    "italic": {
      "begin": "(italic)\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tiramisu"
        }
      },
      "name": "markup.italic.tiramisu",
      "patterns": [
        {
          "include": "#atom"
        },
        {
          "include": "#parameters"
        }
      ]
    },
    "escape": {
      "begin": "(escape)\\s*\\{",
      "end": "\\}",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.tiramisu"
        }
      },
      "name": "markup.escaped.tiramisu",
      "patterns": [
        {
          "match": ".*"
        }
      ]
    }
  }
}
